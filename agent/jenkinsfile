pipeline {
    agent {
        label 'Slave_2'
    }

    stages{
        stage('Build') {
            steps {
                sh 'sleep 10'
            }

        }
    
       
        stage('Test') {
            steps {
                catchError(buildResult : 'SUCCESS' , stageResult : 'FAILURE') {
                         sh '''
                           sleep 10
                              exit 1
                      '''
                }
            }

        }
        stage('deploy') {
            steps {
                sh '''
                #!/bin/bash
                ls -lrt
                sleep 10
                '''
            }
        }
     } 
}