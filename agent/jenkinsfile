pipeline {
    agent none
        parameters{
            string(name: 'PERSON', defaultValue: ' ', description: 'Who should I say hello to?') 
        }

        stages{
            stage('Build') {
                 agent {
                 label 'Slave_2'
                }
                steps {
                    echo "Hello ${params.PERSON}"
                    sh '''
                      sleep 10
                        '''
                    }
                
            }
    
       
            stage('Test') {
                agent {
                    label 'Slave_1'
                }
                steps{
                catchError(buildResult : 'SUCCESS', stageResult : 'FAILURE') {
                    sh '''
                        sleep 10
                        '''
                    }
                }
                
            }
            stage('deploy') {
                agent {
                    label 'Slave_2'
                }
                steps {
                    sh '''
                    #!/bin/bash
                    ls -lrt
                    sleep 10
                    '''
                }
            }
        }
        post {
        always {
            echo 'Sending emails ...'
            emailext recipientProviders: [[$class: 'DevelopersRecipientProvider'], [$class: 'RequesterRecipientProvider']],
                    subject: '${DEFAULT_SUBJECT}', body: '${DEFAULT_CONTENT}',
                    to: "${env.EMAIL_RECIPIENTS},\$DEFAULT_RECIPIENTS"
        }
    }
}    
        
     
